<h1>Your Novels</h1>
<ul>
<% @user.novels.each do |novel| %>
  <li><%= link_to "#{novel.title}", novel_path(novel) %> - <%= @user.memberships.find_by(novel_id: novel.id).role %></li>
<% end %>
</ul>
<%= link_to "Create New Novel", new_novel_path if current_user == @user %><br>
<%= link_to "Back to your profile", user_path(current_user) %>
