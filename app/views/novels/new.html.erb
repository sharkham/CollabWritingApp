<h1>Create a new novel</h1>

<%= form_for @novel do |f| %>
  <%= f.fields_for @membership do |mem| %>
    <%= mem.hidden_field :user_id, :value => current_user.id %>

    <%= mem.label :role, "Admin?" %><br>
    <%= mem.check_box :role %><br>
  <% end %>

  <%= f.label :title %><br>
  <%= f.text_field :title %><br>
  <br>
  <%= f.label :summary %><br>
  <%= f.text_area :summary %><br>
  <br>
  <%= f.submit %>

<% end %>
