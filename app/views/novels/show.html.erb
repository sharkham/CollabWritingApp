<h1><%= @novel.title %></h1>

<h2>Members:</h2>
<% @novel.users.each do |user| %>
  <%= link_to user_path(user.username) %>
<% end %>

<p><%= @novel.summary %></p>

<h2>Snippets:</h2>
<% @novel.snippets.each do |snippet| %>
  <%= link_to novel_snippet_path(snippet) %>
<% end %>
<%= link_to "New snippet", new_novel_snippet_path(@novel) %><br>
<br>

<%= link_to "Edit Novel", edit_novel_path(@novel) %>
