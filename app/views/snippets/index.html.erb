<h1><%= @novel.title %></h1>
<div class="error_explanation">
<%= flash[:message] if flash[:message] %>
</div>

<% if !@novel.snippets.empty? %>
<ul>
<% @snippets.each do |snippet| %>
  <li><%= link_to "#{snippet.title}", novel_snippet_path(@novel, snippet), class: "title" %> - (<%= snippet.tag %>)

    <ul>
      <li>Summary: <%= snippet.summary %></li>
    </ul>

  </li>
<% end %>
</ul>
<% end %>

<br><br>
<% if @novel.snippets.length > 1 %>
<%= render partial: "sort_form", locals: {novel: @novel} %>
<% end %>

<%= link_to "New snippet", new_novel_snippet_path(@novel) %><br>
<%= link_to "Back to Novel", novel_path(@novel) %>
