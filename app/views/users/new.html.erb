<h1>Sign up</h1>

<% if !!flash[:errors] %>
  <div class="error_explanation">
  <% flash[:errors].each do |err| %>
    <p><%= err %></p>
  <% end %>
  </div>
<% end %>


<%= form_for(@user, url:'/signup') do |f| %>

  <%= f.label :username %>
  <%= f.text_field :username %>
  <br>
  <%= f.label :email %>
  <%= f.email_field :email %>
  <br>
  <%= f.label :password %>
  <%= f.password_field :password %>
  <br>
  <%= f.submit "Sign Up" %>

<% end %>
